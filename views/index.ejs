<%- include('partials/header', { title: 'Trang chủ' , currentPage: 'home' }) %>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8 hero-content">
                    <h1 class="hero-title">
                        <i class="bi bi-gear-fill me-3"></i>
                        Hệ thống quản lý
                    </h1>
                    <p class="hero-subtitle">
                        Quản lý sản phẩm và nhà cung cấp một cách hiệu quả với giao diện hiện đại và thân thiện
                    </p>
                    <div class="action-buttons">
                        <a href="/products" class="btn btn-primary btn-lg">
                            <i class="bi bi-box me-2"></i>Quản lý sản phẩm
                        </a>
                        <a href="/suppliers" class="btn btn-success btn-lg">
                            <i class="bi bi-truck me-2"></i>Quản lý nhà cung cấp
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 text-center d-none d-lg-block">
                    <i class="bi bi-box-seam" style="font-size: 12rem; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <div class="container">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="stats-card products">
                    <div class="stats-number">
                        <%= productCount || 0 %>
                    </div>
                    <div class="stats-label">Tổng số sản phẩm</div>
                    <div class="mt-3">
                        <a href="/products" class="btn btn-outline-primary">
                            <i class="bi bi-eye me-1"></i>Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="stats-card suppliers">
                    <div class="stats-number">
                        <%= supplierCount || 0 %>
                    </div>
                    <div class="stats-label">Tổng số nhà cung cấp</div>
                    <div class="mt-3">
                        <a href="/suppliers" class="btn btn-outline-success">
                            <i class="bi bi-eye me-1"></i>Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h2 class="page-title text-center mb-5">Tính năng chính</h2>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card text-center h-100">
                    <div class="card-body">
                        <i class="bi bi-plus-circle-fill text-primary mb-3" style="font-size: 3rem;"></i>
                        <h5 class="card-title">Thêm mới</h5>
                        <p class="card-text">Dễ dàng thêm sản phẩm và nhà cung cấp mới vào hệ thống</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center h-100">
                    <div class="card-body">
                        <i class="bi bi-pencil-square text-success mb-3" style="font-size: 3rem;"></i>
                        <h5 class="card-title">Chỉnh sửa</h5>
                        <p class="card-text">Cập nhật thông tin sản phẩm và nhà cung cấp một cách nhanh chóng</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center h-100">
                    <div class="card-body">
                        <i class="bi bi-trash-fill text-danger mb-3" style="font-size: 3rem;"></i>
                        <h5 class="card-title">Xóa</h5>
                        <p class="card-text">Loại bỏ dữ liệu không cần thiết một cách an toàn</p>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <%- include('partials/footer') %>